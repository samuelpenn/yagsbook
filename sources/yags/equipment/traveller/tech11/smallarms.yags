                <range>
                    <increment>30</increment>
                    <short>500</short><medium>1000</medium><long>2500</long>
                </range>
            </combat>
            <strength>2</strength><load>3</load><reach>2</reach>
            <capacity>40</capacity><rof>10</rof><recoil>-2</recoil>
