                    <short>1500</short><medium>3000</medium><long>6000</long>
                </range>
            </combat>
            <strength>3</strength><load>9</load><reach>3</reach>
            <capacity>8</capacity><rof>3</rof><recoil>-5</recoil>
            <properties>
                <missile/><firearm/><semiauto/><heavy/>
                <reload score="1"/>
            </properties>
        </weapon>
    </item>

