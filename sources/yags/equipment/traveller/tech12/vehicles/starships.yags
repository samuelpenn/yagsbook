        <performance realm="Space">
            <acceleration>40</acceleration>
            <deltavee>8650</deltavee>
        </performance>

        <description>
            <para>
                This is the armoured varient of the Eckamon Scout. It is
                better equipped for more dangerous situations, though
                lacks some of the acceleration of the basic model.
            </para>
        </description>

        <vehicle xmlns="http://yagsbook.sourceforge.net/xml/yags">
            <attributes size="20" soak="30" move="200" acceleration="200">
                <attribute name="strength" score="35"/>
                <attribute name="health" score="4"/>
                <attribute name="agility" score="4"/>
                <attribute name="perception" score="8"/>
            </attributes>

            <stealth signature="-8"/>

            <combat>
                <armour location="Hull" score="30"/>

                <weapon name="700 MJ Fusion Cannon">
                    <attack score="5"/>
                    <damage score="75"/>
                    <increment>250</increment>
                    <rof>1</rof><capacity>40</capacity><recoil>0</recoil>
                    <range>
                        <short>2500</short>
