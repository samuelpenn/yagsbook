                </range>
            </combat>
            <strength>3</strength><load>4</load><reach>2</reach>
            <capacity>30</capacity><rof>50</rof><recoil>-5</recoil>
            <properties>
                <missile/><firearm/><semiauto/><automatic/>
                <reload score="2"/>
            </properties>
        </weapon>
    </item>

