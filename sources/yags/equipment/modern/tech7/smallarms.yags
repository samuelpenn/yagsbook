            <strength>4</strength><load>5</load><reach>3</reach>
            <capacity>7</capacity><rof>5</rof><recoil>-5</recoil>
            <properties>
                <missile/><firearm/><semiauto/><light/><shotgun/>
                <reload score="6"/>
            </properties>
        </weapon>
    </item>

