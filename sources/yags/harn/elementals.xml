                            <entry>I</entry><entry>5 (Medium)</entry><entry>1</entry><entry>3</entry>
                            <entry>+0</entry><entry>+0</entry><entry>+0</entry><entry>+0</entry>
                        </row>
                        <row>
                            <entry>II</entry><entry>10 (Large)</entry><entry>2</entry><entry>6</entry>
