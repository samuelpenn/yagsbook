<?xml version="1.0"?>

<character-templates>

<character-template name="Order of Hyvrik">

    <description>
		<background>
			<para>
			The Order of Hyvrik is the Larani clerical order which sponsors
			the fighting order Checkered Shield. The order is very wealthy,
			holding vast estates throughout Kanday.
			</para>
			<para>
			Most members of the Order are temple priests, trained in the
			teachings of their goddess, and to some extent in war, so that
			they are at least able to defend themselves and their parish
			from danger. However, fighting is generally left to others unless
			absolutely necessary.
			</para>
		</background>
    </description>

	<attributes points="48">
		<attribute name="strength" score="3" weight="6"/>
		<attribute name="stamina" score="3" weight="3"/>
		<attribute name="agility" score="2" weight="1"/>
		<attribute name="dexterity" score="3" weight="3"/>
		<attribute name="perception" score="3" weight="3"/>
		<attribute name="intelligence" score="3" weight="6"/>
		<attribute name="charisma" score="4" weight="9"/>
		<attribute name="will" score="4" weight="9"/>
	</attributes>

	<advantages points="14">
		<advantage name="attributes" cost="+5"/>
		<advantage name="literate" cost="+2"/>
		<advantage name="social status" cost="+2"/>
		<advantage name="experience" core="10pts" cost="+5"/>
        <advantage name="terrible liar" score="-3" cost="-3"/>
        <advantage name="duty" target="aiding the church" cost="-6"/>
        <advantage name="loyalty" target="Larani" score="+4" cost="-4"/>
        <advantage name="sensitive" target="suffering of the weak" score="+3" cost="-1"/>
	</advantages>

	<skills>
		<group name="Talents" type="talents">
			<skill name="Athletics" score="2" weight="1"/>
			<skill name="Awareness" score="2" weight="1"/>
			<skill name="Brawl" score="2" weight="1"/>
			<skill name="Charm" score="3" weight="6"/>
			<skill name="Guile" score="3" weight="6"/>
			<skill name="Sleight" score="1" weight="1"/>
			<skill name="Stealth" score="1" weight="1"/>
			<skill name="Throw" score="1" weight="1"/>
		</group>

		<group name="Common Knowledges" type="knowledges">
			<skill name="Area lore" score="2" weight="3"/>
			<skill name="Folk lore" score="2" weight="1"/>
			<skill name="Speak own" score="4" weight="0"/>
			<skill name="Scribe own" score="4" weight="0"/>
		</group>
	</skills>

	<skills age="16">
		<group name="Misc" type="skills">
			<skill name="Religion (Larani)" score="4" weight="3"/>
			<skill name="Weapon and shield" score="3" weight="3"/>
			<skill name="First aid" score="2" weight="3"/>
            <skill name="Ride" score="2" weight="3"/>
            <skill name="Law" score="2" weight="6"/>

            <skill name="Etiquette" score="0" weight="3"/>
		</group>

		<group name="Larani" type="invocations">
			<skill name="Blessing" score="2" weight="3"/>
			<skill name="Banner of Mendiz" score="2" weight="1"/>
			<skill name="Larani's Shield" score="1" weight="1"/>
			<skill name="Light of Dolithor" score="1" weight="1"/>
            <skill name="Valamin's Insight" score="2" weight="3"/>
            <skill name="Fast of the Tirannon" score="1" weight="1"/>
            <skill name="Passage to Tirithor" score="1" weight="3"/>
            <skill name="Curse of the Reluctant Warrior" score="1" weight="3"/>
            <skill name="Courage of Mendiz" score="1" weight="1"/>
		</group>
	</skills>

	<skills age="21">
        <group name="Misc" type="skills">
            <skill name="Law" score="4"/>
            <skill name="Etiquette" score="1"/>
        </group>
	</skills>

	<skills age="25">
		<group name="Larani" type="invocations">
            <skill name="Passage to Tirithor" score="3"/>
            <skill name="Curse of the Reluctant Warrior" score="3"/>
		</group>
	</skills>

	<skills age="30">
		<group name="Misc" type="skills">
            <skill name="First aid" score="3"/>
		</group>

		<group name="Larani" type="invocations">
			<skill name="Blessing" score="4"/>
		</group>
	</skills>

	<equipment>
        <item name="Larani robes"/>
	</equipment>
</character-template>


